// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  UserID    String @id
  Email     String @unique
  Name      String?
  Password  String
  Teacher   Teacher?
  Student   Student?
  IsAdmin   Boolean @default(false)
}

model Teacher {
  TeacherID String @id
  User      User  @relation(fields: [UserID], references: [UserID])
  UserID    String @unique
  Classes   Class[]
  Subjects   Subject[]
}

model Student {
  StudentID String @id
  User      User  @relation(fields: [UserID], references: [UserID])
  UserID    String @unique
  Class     Class  @relation(fields: [ClassID], references: [ClassID])
  ClassID   String
  Grades    Grade[]
}

model Class {
  ClassID    String   @id
  ClassName  String
  TeacherID  String
  Teacher    Teacher  @relation(fields: [TeacherID], references: [TeacherID])
  Students   Student[]
}

model Subject {
  SubjectID    String   @id
  SubjectName  String
  TeacherID    String
  Teacher      Teacher  @relation(fields: [TeacherID], references: [TeacherID])
  Grades       Grade[]
}

model Grade {
  GradeId      String   @id
  GradeValue   String
  SubjectID    String
  Subject      Subject   @relation(fields: [SubjectID], references: [SubjectID])
  StudentID    String
  Student      Student  @relation(fields: [StudentID], references: [StudentID])
}